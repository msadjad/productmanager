<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        x:Class="IMPOS.Views.MaterialManagementView"
    xmlns:view="clr-namespace:IMPOS.Views"  
    xmlns:local="clr-namespace:IMPOS.Helpers"  
    xmlns:conv="clr-namespace:IMPOS.Helpers"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        Title="مدیریت کالاها" Initialized="MaterialManagementView_OnInitialized" WindowStartupLocation="CenterScreen" WindowState="Maximized" Width="1400" Height="1200" Icon="..\Images\Logo2.png"  Closed="Window_Closed" SizeChanged="Window_SizeChanged" >
    <Window.Resources>
        <view:MaterialManagementView x:Key="MaterialManagementView"></view:MaterialManagementView>
        <conv:HiddenToCheckedConverter x:Key="HiddenToCheckedConverter"></conv:HiddenToCheckedConverter>
        <conv:ImageNameConverter x:Key="ImageName"></conv:ImageNameConverter>
        <conv:HeightEquilZeroConverter x:Key="HeightEquilZero"></conv:HeightEquilZeroConverter>
        <DataTemplate x:Key="ImageGalleryDataTemplate">
            <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding ImagePath,Converter={StaticResource ImageName}}" FlowDirection="LeftToRight" Grid.Column="2" ></TextBlock>
                    <Border BorderBrush="#FFFFFF" BorderThickness="3" HorizontalAlignment="Center" Height="120" Width="120"   Padding="10" Margin="5" CornerRadius="10">
                    <!--Bind Image Path in Image Control-->
                        <Image Source="{Binding ImagePath}" HorizontalAlignment="Center" Width="120" Stretch="UniformToFill" >
                            <!--View Large Image on Image Control Tooltip-->
                            <Image.ToolTip>
                                <Grid>
                                    <Image Source="{Binding ImagePath}" Stretch="UniformToFill" ></Image>
                                </Grid>
                            </Image.ToolTip>

                        </Image>

                </Border>
            </Grid>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="ImageGalleryItemsPanelTemplate">

            <!--Display Images on UniformGrid Panel-->
            <UniformGrid Columns="4" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        </ItemsPanelTemplate>

        <Style TargetType="{x:Type telerik:RadPaneGroup}" ><!--BasedOn="{StaticResource {x:Type ScNamespace:MyCustomControl}}"-->
            <Setter Property="BorderBrush" Value="DodgerBlue"/>
            <Setter Property="Background" Value="#FFC6D9F1"/>
        </Style>


        <DataTemplate x:Key="s11">
            <TextBlock Text="ساختار کالاها" FontFamily="Tahoma" TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
        </DataTemplate>
        <DataTemplate x:Key="s111">
            <TextBlock Text="فهرست کالا" FontFamily="Tahoma" TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
        </DataTemplate>
        
        <DataTemplate x:Key="s112">
            <TextBlock Text="پنجره انتقال" FontFamily="Tahoma" TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
        </DataTemplate>

        <DataTemplate x:Key="s12">
            <TextBlock Text="اجزای کالا" FontFamily="Tahoma"  TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
        </DataTemplate>

        <DataTemplate x:Key="s122">
            <TextBlock Text="کالاهای وابسته" FontFamily="Tahoma"  TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
        </DataTemplate>

        <DataTemplate x:Key="s21">
            <TextBlock Text="اطلاعات کالا" FontFamily="Tahoma"  TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
        </DataTemplate>

        <DataTemplate x:Key="s22">
            <TextBlock Text="تامین کنندگان" Focusable="False" FontFamily="Tahoma"  TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
            <!--{Binding HeaderOfMadPur,Mode=TwoWay}-->
        </DataTemplate>

        <DataTemplate x:Key="s221">
            <TextBlock Text="اطلاعات عملیات تولید" Focusable="False" FontFamily="Tahoma"  TextAlignment="Center" Margin="30,0,0,0" Foreground="Red"/>
            <!--{Binding HeaderOfMadPur,Mode=TwoWay}-->
        </DataTemplate>
        <DataTemplate x:Key="s31">
            <TextBlock Text="تصویر و فیلم کالا" TextAlignment="Center" FontFamily="Tahoma"  Margin="30,0,0,0" Foreground="Red"/>
        </DataTemplate>
        <DataTemplate x:Key="s32">
            <TextBlock Text="اطلاعات موجودی" TextAlignment="Center" Margin="30,0,0,0" FontFamily="Tahoma"  Foreground="Red"/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#FFC6D9F1"  FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <telerik:RadRibbonView VerticalAlignment="Top" telerik:StyleManager.Theme="Office_Blue" FlowDirection="RightToLeft"  HeaderBackground="#FFDBEEF4" ApplicationName="سیستم ایران صنعت" ApplicationButtonVisibility="Collapsed">
            <telerik:RadRibbonView.TitleBarBackground>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFADC8E5" Offset="1"/>
                    <GradientStop Color="#FF0F2C4F"/>
                    <GradientStop Color="#FF5C7898" Offset="1"/>
                    <GradientStop Color="#FF1C395C" Offset="0.979"/>
                </LinearGradientBrush>
            </telerik:RadRibbonView.TitleBarBackground>
            <telerik:RadRibbonTab Header="امکانات" FontFamily="B Zar" FontSize="8" >
                <telerik:RadRibbonGroup Header="کالا" Width="Auto" >
                    <Border  Background="Transparent">
                        <telerik:RadRibbonButton Text="جدید" LargeImage="..\Images\New.png" Size="Large" FontFamily="B Zar" Command="{Binding CrudClick}" CommandParameter="new" FontSize="13"
                                                  telerik:ScreenTip.Title="جدید(New)" IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="جهت ساختن کالای جدید بر روی این گیزینه فشار داده و در بخش کالاها اطلاعات را وارد نمایید"  Height="67" VerticalAlignment="Bottom"/>
                    </Border>
                    <StackPanel  Background="Transparent" VerticalAlignment="Center">
                        <RadioButton Content="مستقل" FontFamily="B Zar" IsChecked="{Binding IsIndepend,Mode=TwoWay}" FontSize="13" Width="50"
                                                  telerik:ScreenTip.Title="مستقل" 
                                                  telerik:ScreenTip.Description=""  IsEnabled="{Binding NewDisabling,Mode=OneWay}"   VerticalAlignment="top"/>
                        <RadioButton Content="جزء" FontFamily="B Zar" FontSize="13" IsChecked="{Binding IsDepend,Mode=OneWay}"  Width="50"
                                                  telerik:ScreenTip.Title="جزء"
                                                  telerik:ScreenTip.Description=""  IsEnabled="{Binding NewDisabling,Mode=OneWay}"   VerticalAlignment="Bottom"/>
                    </StackPanel>
                    <telerik:RadRibbonButton Text="جستجو" LargeImage="..\Images\Preview.png"  IsEnabled="{Binding NewDisabling,Mode=OneWay}" Size="Large" FontFamily="B Zar" FontSize="13" Command="{Binding CrudClick}" CommandParameter="search"
                                                  telerik:ScreenTip.Title="جستجو(Search)"  Click="ButtonSearch_OnClick"
                                                  telerik:ScreenTip.Description="با استفاده از این گزینه می‏توانید کالای مورد نظر خود را جستجو نمایید"/>
                    <telerik:RadRibbonButton Text="ذخیره" LargeImage="..\Images\save.png" Size="Large" FontFamily="B Zar" FontSize="13" Command="{Binding CrudClick}" CommandParameter="save"
                                                  telerik:ScreenTip.Title="ذخیره" Click="ButtonBase_SaveClick"
                                                  telerik:ScreenTip.Description=""/><!--IsEnabled="{Binding NewActivated,Mode=TwoWay}"-->
                    <!--<telerik:RadRibbonSplitButton Text="ذخیره" LargeImage="..\Images\Cut.png" Size="Large" FontFamily="B Zar" FontSize="13"
                                                  telerik:ScreenTip.Title="ذخیره"
                                                  telerik:ScreenTip.Description="با استفاده از این گزینه میتوانید کالای مورد نظر را برداشته تا در جای دیگر قرار دهید. تا زمانی که قرار نداهید، کالای مورد نظر جا به جا نخواهد شد"/>-->
                    <telerik:RadRibbonButton Text="انصراف" LargeImage="..\Images\cancel.png" Size="Large" FontFamily="B Zar" FontSize="13" Command="{Binding CrudClick}" CommandParameter="cancel"
                                                  telerik:ScreenTip.Title="انصراف" Click="ButtonBase_SaveClick" IsEnabled="{Binding CancleActivated,Mode=TwoWay}"
                                                  telerik:ScreenTip.Description=""/>
                    <telerik:RadRibbonButton Text="حذف" LargeImage="..\Images\Remove.png" Size="Large" FontFamily="B Zar" FontSize="13" Command="{Binding CrudClick}" CommandParameter="del"
                                                  telerik:ScreenTip.Title="حذف(Delete)"  IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="جهت حذف کالای انتخاب شده میتوانید از این گزینه استفاده نمایید"/>

                    <telerik:RadRibbonButton Text="بازیابی مجدد" LargeImage="..\Images\Remove.png" Size="Large" FontFamily="B Zar" FontSize="12" Command="{Binding CrudClick}" CommandParameter="reload"
                    telerik:ScreenTip.Title="بازیابی مجدد(Reload data)"  IsEnabled="{Binding NewDisabling,Mode=OneWay}" telerik:ScreenTip.Description=".برای بازیابی اطلاعات از این گزینه استفاده نمایید"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="ساختار کالا" Width="auto" >
                    <telerik:RadRibbonButton Text="افزودن اجزاء" LargeImage="..\Images\Product.png" Size="Large" FontFamily="B Zar" FontSize="11" Command="{Binding StructureClick}" CommandParameter="add"
                                                  telerik:ScreenTip.Title="تمام کالاها " IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="با استفاده از این گزینه تمامی کالاهای مورد نظر ارزیابی می‏شوند" />
                    <telerik:RadRibbonButton Text="پنجره انتفال" LargeImage="..\Images\Cart.png" Size="Large" FontFamily="B Zar" FontSize="11" Command="{Binding StructureClick}" CommandParameter="moveWindow"
                                                  telerik:ScreenTip.Title="پنجره انتفال" IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="" />
                    <StackPanel  Background="Transparent" VerticalAlignment="Center">
                        <RadioButton Content="فهرست کالا" FontFamily="B Zar" FontSize="12" IsChecked="{Binding TransferFehrest,Mode=TwoWay}" 
                                                  telerik:ScreenTip.Title="فهرست کالا" IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="حالت لیستی کالاهای تولیدی" />
                        <RadioButton Content="ساختار کالا" FontFamily="B Zar" FontSize="12" IsChecked="{Binding TransferSakhtar,Mode=OneWay}" 
                                                  telerik:ScreenTip.Title="ساختار کالا" IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="حالت درختی کالاهای تولیدی" />
                    </StackPanel>
                            <telerik:RadRibbonButton Text="برداشتن" LargeImage="..\Images\industry.png" Size="Large" FontFamily="B Zar" FontSize="11" Command="{Binding StructureClick}" CommandParameter="move"
                                                  telerik:ScreenTip.Title="برداشتن(Cut)" IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="با استفاده از این گزینه تمامی کالاهای تولیدی ارزیابی می‏شوند"/>
                    <telerik:RadRibbonButton Text="رونوشت" LargeImage="..\Images\industry.png" Size="Large" FontFamily="B Zar" FontSize="11" Command="{Binding StructureClick}" CommandParameter="copy"
                                                  telerik:ScreenTip.Title="رونوشت(Copy)" IsEnabled="{Binding NewDisabling,Mode=OneWay}"
                                                  telerik:ScreenTip.Description="با استفاده از این گزینه تمامی کالاهای تولیدی ارزیابی می‏شوند"/>
                    <telerik:RadRibbonButton Text="قرار دادن" LargeImage="..\Images\industry.png" Size="Large" FontFamily="B Zar" FontSize="11" Command="{Binding StructureClick}" CommandParameter="paste"
                                                  telerik:ScreenTip.Title="قرار دادن(Paste)"  IsEnabled="{Binding PasteActive,Mode=TwoWay}"
                                                  telerik:ScreenTip.Description="با استفاده از این گزینه تمامی کالاهای تولیدی ارزیابی می‏شوند"/>
                </telerik:RadRibbonGroup>
                <telerik:RadRibbonGroup Header="پنجره" Width="auto">
                    <StackPanel>
                        <CheckBox FontFamily="B Zar" FontSize="13" Click="Cheked_OnClick" Name="MaterialStractureShowHide" >
                            <StackPanel>
                                <Image Source="..\Images\ProductStructure.png" >
                                </Image>
                                <TextBlock FontFamily="B Zar" FontSize="13" Text="ساختار کالا">
                                </TextBlock>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel>
                        <CheckBox FontFamily="B Zar" FontSize="13" Click="Cheked_OnClick" Name="MaterialContainsShowHide"  >
                            <StackPanel>
                                <Image Source="..\Images\ProductParts.png">
                                </Image>
                                <TextBlock FontFamily="B Zar" FontSize="13" Text="اجزای کالا">
                                </TextBlock>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel>
                        <CheckBox FontFamily="B Zar" FontSize="13" Click="Cheked_OnClick" Name="MaterialFathersShowHide" >
                            <StackPanel>
                                <Image Source="..\Images\ProductParts.png">
                                </Image>
                                <TextBlock FontFamily="B Zar" FontSize="13" Text="کالاهای وابسته">
                                </TextBlock>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel>
                        <CheckBox FontFamily="B Zar" FontSize="13" Click="Cheked_OnClick" Name="MaterialInfoShowHide" >
                            <StackPanel>
                                <Image Source="..\Images\ProductInfo.png">
                                </Image>
                                <TextBlock FontFamily="B Zar" FontSize="13" Text="اطلاعات کالا">
                                </TextBlock>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel>
                        <CheckBox FontFamily="B Zar" FontSize="13" Click="Cheked_OnClick" Name="OperationInfoShowHide" >
                            <StackPanel>
                                <Image Source="..\Images\PrductionInfo.png">
                                </Image>
                                <TextBlock FontFamily="B Zar" FontSize="13" Text="اطلاعات عملیات">
                                </TextBlock>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel>
                        <CheckBox FontFamily="B Zar" FontSize="13" Name="ImageAndFilmShowHide" Click="Cheked_OnClick"  >
                            <StackPanel>
                                <Image Source="..\Images\Image.png">
                                </Image>
                                <TextBlock FontFamily="B Zar" FontSize="13" Text="تصویر و فیلم">
                                </TextBlock>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel>
                        <CheckBox FontFamily="B Zar" FontSize="13" Click="Cheked_OnClick" Name="EntriesInfoShowHide" >
                            <StackPanel>
                                <Image Source="..\Images\entiesInfo.png">
                                </Image>
                                <TextBlock FontFamily="B Zar" FontSize="13" Text="اطلاعات موجودی">
                                </TextBlock>
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <telerik:RadRibbonButton Text="تنظیم پنجره‏ها" Width="50" LargeImage="..\Images\Arrange.png" Click="ButtonBase_OnClick" Size="Large" FontFamily="B Zar" FontSize="10"
                                                  telerik:ScreenTip.Title="تنظیم پنجره‏ها"
                                                  telerik:ScreenTip.Description="با استفاده از این گزینه میتوانید پنجره‏ها را به حالت پیشفرض برگردانید" />
                        <!--Command="{Binding ResetAllWindowClick}"-->
                        
                    </StackPanel>

                </telerik:RadRibbonGroup>
                
            </telerik:RadRibbonTab>
        </telerik:RadRibbonView>
        <Grid Row="1">
            <telerik:RadDocking Close="RadDocking_OnClose" Background="#FFC6D9F1" BorderBrush="DodgerBlue" Name="radDocking" Show="radDocking_Show">
                <telerik:RadSplitContainer Name="FirstCol"  InitialPosition="DockedLeft" Orientation="Vertical" >
                    <telerik:RadPaneGroup  IsTabStop="False">
                        <telerik:RadDocumentPane  IsTabStop="False" TitleTemplate="{StaticResource s11}"  Header="ساختار کالاها" Name="StractureMaterial"  telerik:RadDocking.SerializationTag="11"  FontFamily="B Zar" FontSize="15" BorderBrush="DodgerBlue">
                            <!--IsHidden="{Binding MaterialStractureIsHide,Mode=TwoWay}"-->

                            <Grid>
                                <Grid>
                                    <telerik:RadTreeView  BorderBrush="DarkBlue" Margin="1" Name="tree" TabIndex="0" SelectionChanged="treeViewProductStructure_SelectionChanged" AllowDrop="False" IsDropPreviewLineEnabled="False" ItemsSource="{Binding Groups,Mode=TwoWay}" SelectedItem="{Binding CurrentGroup,Mode=TwoWay}" Background="#FFC6D9F1" IsLineEnabled ="true" PreviewDrop="Tree_OnDrop" IsDragDropEnabled="True" SelectionMode="Single" telerik:StyleManager.Theme="Office_Black">
                                        <!--<i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction CommandParameter="{Binding SelectedItem, ElementName=tree}"
                                                                        Command="{Binding TreeSelectionChanged}" ></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                                        <telerik:RadTreeView.ItemContainerStyle>
                                            <Style TargetType="{x:Type telerik:RadTreeViewItem}">
                                                <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded}">
                                                </Setter>
                                                <Setter Property="IsSelected" Value="{Binding Path=IsSelected}">
                                                </Setter>
                                            </Style>
                                            <!--<Style TargetType="{x:Type TreeViewItem}">
                                                <Setter Property="IsExpanded" Value="True"/>
                                            </Style>-->
                                        </telerik:RadTreeView.ItemContainerStyle>
                                        <telerik:RadTreeView.Resources>
                                            <HierarchicalDataTemplate DataType="{x:Type local:ItemInTree}"  ItemsSource="{Binding SubItemInTrees,Mode=TwoWay}">
                                                <TextBlock Text="{Binding Path=ItemData.title,Mode=TwoWay}" />
                                            </HierarchicalDataTemplate>
                                            <!--<Style TargetType="TreeViewItem">
                                                <Setter Property="IsExpanded" Value="{Binding Path=IsExpanded, Mode=TwoWay}" />
                                            </Style>-->
                                        </telerik:RadTreeView.Resources>
                                    </telerik:RadTreeView>
                                </Grid>
                            </Grid>
                        </telerik:RadDocumentPane>
                        <telerik:RadDocumentPane Loaded="FehrestMaterial_OnLoaded" IsTabStop="False" TitleTemplate="{StaticResource s111}"  Header="فهرست کالا" Name="FehrestMaterial" telerik:RadDocking.SerializationTag="1111"  FontFamily="B Zar" FontSize="15" BorderBrush="DodgerBlue" IsHidden="True">
                            <!--IsHidden="{Binding MaterialStractureIsHide,Mode=TwoWay}"-->

                            <Grid>
                                <Grid Row="1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="جست و جو :" VerticalAlignment="Center"></TextBlock>
                                        <TextBox Text="{Binding SearchText,Mode=TwoWay}" Name="sasa" Grid.Column="1" Margin="3" >
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="TextChanged">
                                                    <i:InvokeCommandAction CommandParameter="{Binding Text, ElementName=sasa}"
                                                                        Command="{Binding SearchTextChanged}" ></i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </TextBox>
                                        <Button Content="X" Command="{Binding CrudClick}" CommandParameter="search" Click="ButtonSearch_OnClick" Margin="3" HorizontalAlignment="Left"  Grid.Column="2" Grid.Row="0"></Button>

                                        <ListBox Grid.Row="1"  Background="#FFC6D9F1" BorderBrush="DodgerBlue" Grid.ColumnSpan="20" Margin="3" ItemsSource="{Binding Items,Mode=TwoWay}" SelectedItem="{Binding CurrentItem,Mode=TwoWay}">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding title,Mode=TwoWay}"></TextBlock>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>

                                    </Grid>
                                </Grid>
                            </Grid>
                        </telerik:RadDocumentPane>
                    </telerik:RadPaneGroup>
                    <telerik:RadPaneGroup  IsTabStop="False">
                        <telerik:RadDocumentPane  IsTabStop="False" TitleTemplate="{StaticResource s112}"  Header="پنجره انتقال" Name="MoveWindow" telerik:RadDocking.SerializationTag="121"  FontFamily="B Zar" FontSize="15" BorderBrush="DodgerBlue">
                            <!--IsHidden="{Binding MaterialStractureIsHide,Mode=TwoWay}"-->
                            <Grid Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{Binding TransferList,Mode=TwoWay}"></ColumnDefinition>
                                    <ColumnDefinition Width="{Binding TransferTree,Mode=TwoWay}"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Text="{Binding AmountOfFather,Mode=TwoWay}"></TextBox>
                                    <TextBlock Text="{Binding CurrentMeasuringType.title,Mode=TwoWay}" HorizontalAlignment="Left" Margin="1,1,30,1" Width="50" Grid.Column="1"></TextBlock>
                                    <Button Content="تایید" Command="{Binding TrasferClick}" Margin="53,1,1,1" HorizontalAlignment="Left"  CommandParameter="fatherAdd" Grid.Column="2"></Button>
                                    <TextBlock Text="جست و جو :" VerticalAlignment="Center" Grid.Row="1"></TextBlock>
                                    <TextBox Text="{Binding MoveSearchText,Mode=TwoWay}" Name="sasa2" Grid.Row="1" Grid.Column="1" Margin="3" >
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="TextChanged">
                                                <i:InvokeCommandAction CommandParameter="{Binding Text, ElementName=sasa2}"
                                                                    Command="{Binding MoveSearchTextChanged}" ></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBox>
                                    <ListBox Grid.Row="2"  Background="#FFC6D9F1" BorderBrush="DodgerBlue" Grid.ColumnSpan="20" Margin="3" ItemsSource="{Binding MoveItems,Mode=TwoWay}" SelectedItem="{Binding CurrentMoveItem,Mode=TwoWay}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding title,Mode=TwoWay}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                </Grid>

                                <Grid Column="1">
                                    <telerik:RadTreeView Name="tree2"  SelectedItem="{Binding CurrentGroup22,Mode=TwoWay}" 
                                                    IsDragPreviewEnabled="True"  Background="#FFC6D9F1"  IsLineEnabled ="true" IsDragDropEnabled="True" SelectionMode="Single" telerik:StyleManager.Theme="Office_Black" BorderBrush="DarkBlue" Margin="1,5,1,1">

                                        <i:Interaction.Triggers>

                                            <i:EventTrigger EventName="PreviewDragEnded">
                                                <local:EventCommand  CommandName="DroppedEvent"  Command="{Binding DroppedEvent}"
                                       CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=InvokeParameter}" />
                                                <!--ItemsSource="{Binding Groups2,Mode=TwoWay}"-->
                                                <!--<i:InvokeCommandAction CommandParameter="{Binding SelectedItem, ElementName=tree2}"  
                                                                    Command="{Binding DroppedEvent}" ></i:InvokeCommandAction>-->
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                        <!--<i:Interaction.Behaviors>
                                        <beh:EventToCommandBehavior Command="{Binding DropCommand}" Event="Drop" PassArguments="True" />
                                    </i:Interaction.Behaviors>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Navigated">-->
                                        <!--<cmd:EventToCommand Command="{Binding NavigatedEvent}" PassEventArgsToCommand="True" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                                        <telerik:RadTreeView.Resources>
                                            <HierarchicalDataTemplate DataType="{x:Type local:ItemInTree}" ItemsSource="{Binding SubItemInTrees,Mode=TwoWay}">
                                                <TextBlock Text="{Binding Path=ItemData.title,Mode=TwoWay}" />
                                            </HierarchicalDataTemplate>
                                            <!--<DataTemplate DataType="{x:Type local:Entry}" >
                <TextBlock Text="{Binding Path=Name}" />
            </DataTemplate>-->
                                        </telerik:RadTreeView.Resources>
